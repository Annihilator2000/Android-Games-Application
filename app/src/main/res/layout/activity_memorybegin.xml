<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Memorize.MemoryBegin"
    android:background="@drawable/game_backg10">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/invasion2000"
        android:textAlignment="center"
        android:text="MEMORIZE!"
        android:textColor="#FB8C00"
        android:textSize="61sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/atari_extended"
        android:textAlignment="center"
        android:text="Light Mode"
        android:textColor="#C7BFBF"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        />

    <ImageButton
        android:layout_below="@+id/tv2"
        android:layout_marginTop="0dp"
        android:id="@+id/imageButton"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:scaleType="centerInside"
        android:src="@drawable/play_button2" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/atari_extended"
        android:textAlignment="center"
        android:text="Dark Mode"
        android:textColor="#361409"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="430dp"
        />

    <ImageButton
        android:layout_below="@+id/tv3"
        android:id="@+id/imageButton2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:layout_marginTop="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/play_button3" />

    <Button
        android:id="@+id/highScore"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:text="HIGH SCORE"
        android:textSize="25sp"
        android:layout_marginTop="160dp"
        android:layout_marginStart="121dp"/>

</RelativeLayout>